<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # NO tocar las peticiones a /api/ - dejar que lleguen a Node.js
  RewriteCond %{REQUEST_URI} ^/api/
  RewriteRule ^ - [L]

  # Si el archivo existe, servirlo directamente
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]

  # Si el directorio existe, servirlo directamente
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Todo lo demas -> index.html (SPA fallback)
  RewriteRule ^ index.html [L]
</IfModule>
